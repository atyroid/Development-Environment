# bash history settings
HISTCONTROL=ignoredups:ignorespace
HISTSIZE=''
HISTFILESIZE=''
HISTTIMEFORMAT="%Y%m%d-%H:%M:%S "

shopt -s histappend histreedit cmdhist checkwinsize

# Applications path
export APPSDIR="~/apps64"

# Java
export JAVA_HOME="$APPSDIR/Java"

# Android
export ANDROID_HOME="$APPSDIR/AndroidSdk"
export PATH="$PATH:$ANDROID_HOME/emulator"
export PATH="$PATH:$ANDROID_HOME/tools"
export PATH="$PATH:$ANDROID_HOME/tools/bin"
export PATH="$PATH:$ANDROID_HOME/platform-tools"

# Source Code path
export SOURCE_HOME="~/source"

# Scripts path
export SCRIPTS_HOME="~/scripts"
export PATH=$PATH:$SCRIPTS_HOME 

# any user-specific customizations should go into ~/.bashrc-user-specific
if [ -e ~/.bashrc-user-specific ]; then
    . ~/.bashrc-user-specific
fi

# any user-specific aliases should go into ~/.bash-aliases-user-specific
if [ -e ~/.bash-aliases-user-specific ]; then
    . ~/.bash-aliases-user-specific
fi
